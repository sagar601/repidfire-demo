.navbar.navbar-inverse.navbar-fixed-top.index
  .navbar-inner
    .container
      = link_to "Rapidfire Demo", root_path, class: "brand"
      %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav.pull-right
          %li
            = link_to "Surveys", rapidfire.question_groups_path
          - if current_user.nil?
            %li= link_to "Login", main_app.new_user_session_path
          - else
            %li= link_to "Logout", main_app.destroy_user_session_path, method: :delete
